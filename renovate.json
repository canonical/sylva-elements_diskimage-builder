{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "kanod_image_builder/elements/cis-remediation/post-install.d/97-hardening",
      "matchStrings": ["https:\/\/github\\.com\/(?<depName>.*?)\\n\\s+version: \"(?<currentValue>.*)\""],
      "datasourceTemplate": "github-tags"
    },
    {
      "description": "Match docker image define in CI_IMAGE variables for gitlab-ci",
      "customType": "regex",
      "fileMatch": [".gitlab-ci.yml"],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?)\\s+.*?CI_IMAGE: (?<registryUrl>.*?)\/(?<depName>.*?):(?<currentValue>.*)"
      ],
      "registryUrlTemplate": "https://{{{ registryUrl }}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["renovate-bot/renovate-runner"],
      "groupName": "renovate",
      "schedule": ["before 4am on monday"]
    },
    {
      "matchPackagePatterns": [
        ".*ci-disk-image-builder.*"
      ],
      "groupName": "CI images"
    }
  ]
}