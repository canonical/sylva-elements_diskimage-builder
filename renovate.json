{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "gitlab>sylva-projects/sylva-elements/renovate-config:default"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "kanod_image_builder/elements/cis-remediation/post-install.d/97-hardening",
      "matchStrings": ["https:\/\/github\\.com\/(?<depName>.*?)\\n\\s+version: \"(?<currentValue>.*)\""],
      "datasourceTemplate": "github-tags"
    },
    {
      "description": "Match docker image define in CI_IMAGE variables for gitlab-ci",
      "customType": "regex",
      "fileMatch": [".gitlab-ci.yml"],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?)\\s+.*?CI_IMAGE: (?<registryUrl>.*?)\/(?<depName>.*?):(?<currentValue>.*)"
      ],
      "registryUrlTemplate": "https://{{{ registryUrl }}}"
    },
    {
      "description": "Match Kubernetes version",
      "customType": "regex",
      "fileMatch": [".gitlab-ci.yml"],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( VersionTemplate=(?<VersionTemplate>.*?))?\\s+.*? (?<currentValue>[^\"\\-\n]+)"
      ]
    } 
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "kubernetes/kubernetes",
        "rancher/rke2"
      ],
      "matchUpdateTypes": ["major", "minor"],
      "description": "disabling major and minor version to only keep the patch updates",
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "kubernetes/kubernetes",
        "rancher/rke2"
      ],
      "description": "renovate to propose only patch update without grouping them with minor update",
      "separateMinorPatch": true
    },
    {
      "matchPackagePatterns": [
        ".*ci-disk-image-builder.*"
      ],
      "groupName": "CI images"
    }
  ]
}