{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "gitlab>sylva-projects/sylva-elements/renovate-config:default"
  ],
  "ignorePaths": [
    "demo/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kanod_image_builder/elements/cis-remediation/post-install.d/97-hardening/"
      ],
      "matchStrings": [
        "https://github\\.com/(?<depName>.*?)\\n\\s+version: \"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kanod_image_builder/elements/gtp5g/finalise.d/90-install/"
      ],
      "depNameTemplate": "free5gc/gtp5g",
      "matchStrings": [
        "\\s+gtp5g_version=\"?(?<currentValue>v?\\d+.\\d+.\\d+)\"?"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "description": "Match docker image define in CI_IMAGE variables for gitlab-ci",
      "customType": "regex",
      "managerFilePatterns": [
        "/.gitlab-ci.yml/"
      ],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?)\\s+.*?CI_IMAGE: (?<registryUrl>.*?)/(?<depName>.*?):(?<currentValue>.*)"
      ],
      "registryUrlTemplate": "https://{{{ registryUrl }}}"
    },
    {
      "description": "Match Kubernetes version",
      "customType": "regex",
      "managerFilePatterns": [
        "/.gitlab-ci.yml/"
      ],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( VersionTemplate=(?<VersionTemplate>.*?))?\\s+-\\s+(?<currentValue>\\d+.\\d+.\\d+.*)"
      ],
      "extractVersionTemplate": "{{#if VersionTemplate}}^{{{VersionTemplate}}}(?<version>.*)${{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "rancher/rke2"
      ],
      "versioning": "regex:(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\+rke2r(?<build>\\d+)"
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "description": "disabling major and minor version to only keep the patch updates",
      "enabled": false,
      "matchPackageNames": [
        "/kubernetes/kubernetes/",
        "/rancher/rke2/"
      ]
    },
    {
      "description": "renovate to propose only patch update without grouping them with minor update",
      "separateMinorPatch": true,
      "separateMajorMinor": true,
      "matchPackageNames": [
        "/kubernetes/kubernetes/",
        "/rancher/rke2/"
      ]
    },
    {
      "description": "Regroup kubernetes updates",
      "groupName": "Kubernetes updates",
      "matchPackageNames": [
        "/kubernetes/kubernetes/",
        "/rancher/rke2/"
      ]
    },
    {
      "groupName": "CI images",
      "matchPackageNames": [
        "/.*ci-disk-image-builder.*/"
      ]
    }
  ]
}
