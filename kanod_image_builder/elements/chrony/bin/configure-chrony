set -eu

if [ -z "$1" ]; then
    echo "Disable chrony"
    echo "K8S requires good time synchronization."
    echo "Proceed at your own risks !"
    exit 0
fi

if [ -f /etc/chrony.conf ]; then
    # Redhat/Centos
    target=/etc/chrony.conf
    service=chronyd
elif [ -f /etc/chrony/chrony.conf ]; then
    # Debian/Ubuntu
    target=/etc/chrony/chrony.conf
    service=chrony
else
    echo "Cannot find chrony configuration" >&2
    exit 1
fi

echo "# Generated by configure-chrony" > ${target}

for server in ${1//,/ }; do
  echo "pool ${server} iburst" >> ${target}
done

cat >> $target <<EOF
driftfile /var/lib/chrony/chrony.drift
logdir /var/log/chrony
maxupdateskew 100.0
rtcsync
makestep 1.0 3
leapsectz right/UTC
EOF

if [ -n "$2" ]; then
  echo "# subnets allowed to use this chrony as NTP server."
  for net in ${2//,/ }; do
    echo "allow ${net}" >> ${target}
  done
fi

systemctl enable ${service}
systemctl restart ${service}
chronyc waitsync
