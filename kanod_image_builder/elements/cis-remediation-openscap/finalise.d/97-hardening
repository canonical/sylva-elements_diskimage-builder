#!/bin/bash

# WARNING:
#  It uses the hardening script generated by OSCAP in the building
#  machine/container.

if [ ${DIB_DEBUG_TRACE:-0} -gt 0 ]; then
    set -x
fi
set -eu
set -o pipefail

export LC_ALL="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"

# Global vars
HARDENING_SCRIPT="/fix.sh"

# Execute the hardening bash script
${HARDENING_SCRIPT} || true

# Cleanup hardening script
rm -rf ${HARDENING_SCRIPT}
